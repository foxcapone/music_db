<div class='row'>
  <div class='col-xs-10 col-xs-offset-1'>
      <p id="notice"><%= notice %></p>

    <h1>Songs</h1>

    <table class='table'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Artist</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @songs.order('name').each do |song| %>
          <tr>
            <td><%= song.name %></td>
            <td><%= song.artist.name %></td>
            <td><%= link_to 'Show', song, class: 'btn btn-xs btn-default' %></td>
            <td><%= link_to 'Edit', edit_song_path(song),class: 'btn btn-xs btn-info' %></td>
            <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Song', new_song_path, class: 'btn btn-sm btn-success' %>

  </div>
</div>


